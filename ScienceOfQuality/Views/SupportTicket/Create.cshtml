@using ScienceOfQuality.Models
@model SupportTicketModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create","SupportTicket", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row">
        <h3>Create Ticket</h3>
    </div>
    <div class="row">
        <div class="col-md-6">
            @Html.LabelFor(m => m.Issue, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.Issue, new { @class = "form-control" })
            @Html.LabelFor(m => m.FoundBy, new { @class = "col-md-2 control-label" })
            @Html.TextBoxFor(m => m.FoundBy, new { @class = "form-control" })
            @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
            @Html.DropDownListFor(m => m.Type, Model.Types, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            @Html.LabelFor(m => m.Severity, new { @class = "col-md-2 control-label" })
            @foreach (var severity in Model.Severities)
            {
                @Html.RadioButtonFor(m => m.Severity, severity.Id)@:@severity.Name
            }
            @Html.AntiForgeryToken()

        </div>
    </div>
    
    <div class="row">
        <input type="submit" class="btn btn-default" />
    </div>

}



